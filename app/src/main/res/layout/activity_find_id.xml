<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_above="@+id/header"
    tools:context=".MemberRegistActivity">

    <include
        android:id="@+id/header"
        layout="@layout/activity_mypage_bar"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름과 이메일로 아이디 찾기"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textColor="#0F202E"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="#EEEEEE"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="이름"
            android:padding="10dp"
            android:textSize="15dp" />  123

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:hint="이름 입력"
            android:id="@+id/etName"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="이메일"
            android:padding="10dp"
            android:textSize="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:hint="이메일 입력"
            android:inputType="textEmailAddress"
            android:id="@+id/etEmail"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:backgroundTint="#ec6a5a"
        android:layout_margin="20dp"
        android:id="@+id/btn_ResultId"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:backgroundTint="#ec6a5a"
        android:layout_margin="20dp"
        android:id="@+id/btn_GoPwd"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/ResultId"/>


</LinearLayout>